<p>
  <strong>Comment:</strong>
  <%= comment.body %>
  <strong>Author:</strong>
  <%= gravatar_for(comment.user)%>
  <%= comment.user.name %>
</p>

<% if logged_in? %>
  <p>
    <%= link_to 'Destroy Comment', [comment.article, comment],
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
  </p>
<% end %>